<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/AnimalPhoto1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img"
        />

    <ImageView
        android:id="@+id/AnimalPhoto2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@id/AnimalPhoto1"
        app:layout_constraintStart_toStartOf="@id/AnimalPhoto1"
        app:layout_constraintTop_toBottomOf="@id/AnimalPhoto1"
        android:src="@drawable/img"
        />
    <ImageView
        android:id="@+id/AnimalPhoto3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@id/AnimalPhoto2"
        app:layout_constraintStart_toStartOf="@id/AnimalPhoto2"
        app:layout_constraintTop_toBottomOf="@id/AnimalPhoto2"
        android:src="@drawable/img"
        />
    <Button
        android:id="@+id/getPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Get Animals Images"
        app:layout_constraintEnd_toEndOf="@id/AnimalPhoto3"
        app:layout_constraintStart_toStartOf="@id/AnimalPhoto3"
        app:layout_constraintTop_toBottomOf="@id/AnimalPhoto3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>